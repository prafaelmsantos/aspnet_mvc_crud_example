@{
    ViewBag.Subtitle = "Registo de Utilizador";
}
@model UserModel

<div class="container">
    <h1 class="text-primary">@(Model != null ? "Atualizar Utilizador" : "Registar Utilizador")</h1>
    <hr>
    <form method="POST" class="w-25">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label asp-for="Name">Nome:</label><br>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label><br>
            <input asp-for="Email" class="form-control">
        </div>
         
        <div class="mt-3">
            <a href="/Home/Users" class="btn btn-light">Cancelar</a>
            <button class="btn btn-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>