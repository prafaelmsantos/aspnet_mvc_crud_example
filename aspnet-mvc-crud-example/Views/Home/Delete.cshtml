@{
    ViewData["Title"] = "Apagar Utilizador";
}
@model aspnet_mvc_crud_example.Models.UserModel

<div class="container">
    <h1 class="text-primary">Apagar Utilizador</h1>
    <hr>
    <h4>Tem a certeza que pretende apagar o utilizador <span class="text-danger">@Model.Name</span>  ?</h4>
    <form method="POST" class="w-25">
        <input type="hidden" asp-for="Id">
        <div class="mt-3">
            <a asp-action="Users" class="btn btn-success">Não</a>
            <button class="btn btn-danger" type="submit">Sim</button>
        </div>
    </form>
</div>